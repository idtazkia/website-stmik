---
import { getLocaleFromUrl } from '../utils/i18n';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description, noIndex = false } = Astro.props;

const siteName = 'STMIK Tazkia';
const defaultDescription = 'Menjadi perguruan tinggi yang unggul dalam bidang teknologi informasi yang mencetak lulusan berkompeten dan berkarakter mulia';

const pageTitle = title ? `${title} | ${siteName}` : siteName;
const pageDescription = description || defaultDescription;
const currentLocale = getLocaleFromUrl(Astro.url);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}images/logo-stmik-tazkia.svg`} />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />

    <!-- Language Alternatives -->
    <link rel="alternate" hreflang="id" href={Astro.site} />
    <link rel="alternate" hreflang="en" href={new URL('/en', Astro.site)} />

    <!-- Preload Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
