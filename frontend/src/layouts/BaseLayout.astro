---
import { getLocaleFromUrl } from '../utils/i18n';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  noIndex?: boolean;
  image?: string;
}

// Search engine indexing enabled
// Set noIndex = true on specific pages to block indexing if needed
const { title, description, noIndex = false, image } = Astro.props;

const siteName = 'STMIK Tazkia';
const defaultDescription = 'Menjadi perguruan tinggi yang unggul dalam bidang teknologi informasi yang mencetak lulusan berkompeten dan berkarakter mulia';

const pageTitle = title ? `${title} | ${siteName}` : siteName;
const pageDescription = description || defaultDescription;
const currentLocale = getLocaleFromUrl(Astro.url);

// Canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// OG Image - use provided or default branded image
const ogImage = image
  ? new URL(image, Astro.site).href
  : new URL('/images/og-default.jpg', Astro.site).href;

// Per-page hreflang URLs
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');
const basePath = isEnglish ? (currentPath.replace(/^\/en/, '') || '/') : currentPath;
const idURL = new URL(basePath, Astro.site);
const enURL = new URL(`/en${basePath === '/' ? '' : basePath}`, Astro.site);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/logo-stmik-tazkia.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Language Alternatives -->
    <link rel="alternate" hreflang="id" href={idURL.href} />
    <link rel="alternate" hreflang="en" href={enURL.href} />
    <link rel="alternate" hreflang="x-default" href={idURL.href} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "EducationalOrganization",
      "@id": "https://stmik.tazkia.ac.id/#organization",
      "name": "STMIK Tazkia",
      "alternateName": "Sekolah Tinggi Manajemen Informatika dan Komputer Tazkia",
      "url": "https://stmik.tazkia.ac.id",
      "logo": "https://stmik.tazkia.ac.id/images/logo-stmik-tazkia.svg",
      "description": pageDescription,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Jl. Ir. H. Djuanda No. 78",
        "addressLocality": "Bogor",
        "addressRegion": "Jawa Barat",
        "postalCode": "16122",
        "addressCountry": "ID"
      },
      "telephone": "+62251-8376163",
      "email": "info@stmik.tazkia.ac.id",
      "sameAs": [
        "https://instagram.com/stmik.tazkia",
        "https://youtube.com/@stmiktazkia",
        "https://linkedin.com/company/stmik-tazkia"
      ],
      "parentOrganization": {
        "@type": "Organization",
        "name": "Tazkia Group"
      }
    })} />

    <!-- Preload Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Additional head content from pages -->
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
