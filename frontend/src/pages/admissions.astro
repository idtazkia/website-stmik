---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Container from '../components/Container.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import { getLocaleFromUrl, t, localizePath } from '../utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const translate = (key: string) => t(locale, key);
const localPath = (path: string) => localizePath(locale, path);

const requirements = [
  translate('admissions.req_1'),
  translate('admissions.req_2'),
  translate('admissions.req_3'),
  translate('admissions.req_4'),
  translate('admissions.req_5'),
  translate('admissions.req_6'),
];

const steps = [
  {
    number: 1,
    title: translate('admissions.step_1_title'),
    description: translate('admissions.step_1_desc'),
    icon: 'form'
  },
  {
    number: 2,
    title: translate('admissions.step_2_title'),
    description: translate('admissions.step_2_desc'),
    icon: 'payment'
  },
  {
    number: 3,
    title: translate('admissions.step_3_title'),
    description: translate('admissions.step_3_desc'),
    icon: 'check'
  },
  {
    number: 4,
    title: translate('admissions.step_4_title'),
    description: translate('admissions.step_4_desc'),
    icon: 'announcement'
  },
  {
    number: 5,
    title: translate('admissions.step_5_title'),
    description: translate('admissions.step_5_desc'),
    icon: 'confirm'
  }
];

const scholarships = [
  {
    name: translate('admissions.scholarship_1_name'),
    description: translate('admissions.scholarship_1_desc'),
    icon: 'platinum'
  },
  {
    name: translate('admissions.scholarship_2_name'),
    description: translate('admissions.scholarship_2_desc'),
    icon: 'gold'
  },
  {
    name: translate('admissions.scholarship_3_name'),
    description: translate('admissions.scholarship_3_desc'),
    icon: 'silver'
  }
];

const faqs = [
  { question: translate('admissions.faq_1_q'), answer: translate('admissions.faq_1_a') },
  { question: translate('admissions.faq_2_q'), answer: translate('admissions.faq_2_a') },
  { question: translate('admissions.faq_3_q'), answer: translate('admissions.faq_3_a') },
  { question: translate('admissions.faq_4_q'), answer: translate('admissions.faq_4_a') },
  { question: translate('admissions.faq_5_q'), answer: translate('admissions.faq_5_a') },
];
---

<MarketingLayout title={translate('admissions.title')} description={translate('admissions.description')}>
  <!-- Hero Section -->
  <Section background="gradient" class="pt-32 pb-20">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {translate('admissions.title')}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {translate('admissions.subtitle')}
        </p>
        <a
          href="#registration"
          class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
        >
          {translate('admissions.cta_button')}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </Container>
  </Section>

  <!-- Registration Process -->
  <Section background="white" id="registration">
    <Container>
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            {translate('admissions.process_title')}
          </h2>
          <p class="text-lg text-gray-600">
            {translate('admissions.process_subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-5 gap-4">
          {steps.map((step) => (
            <div class="text-center">
              <div class="w-14 h-14 bg-primary-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
                {step.number}
              </div>
              <h3 class="text-base font-bold text-gray-900 mb-2">{step.title}</h3>
              <p class="text-xs text-gray-600">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Requirements -->
  <Section background="white">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            {translate('admissions.requirements_title')}
          </h2>
          <p class="text-lg text-gray-600">
            {translate('admissions.requirements_subtitle')}
          </p>
        </div>

        <Card>
          <div class="p-8">
            <ul class="grid md:grid-cols-2 gap-4">
              {requirements.map((req) => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-gray-700">{req}</span>
                </li>
              ))}
            </ul>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Scholarships -->
  <Section background="gradient">
    <Container>
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            {translate('admissions.scholarship_title')}
          </h2>
          <p class="text-lg text-gray-600">
            {translate('admissions.scholarship_subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          {scholarships.map((scholarship) => (
            <Card hover={true}>
              <div class="p-6 text-center">
                <div class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4" class:list={[
                  scholarship.icon === 'platinum' && 'bg-gradient-to-br from-slate-300 to-slate-500',
                  scholarship.icon === 'gold' && 'bg-gradient-to-br from-yellow-300 to-yellow-500',
                  scholarship.icon === 'silver' && 'bg-gradient-to-br from-gray-200 to-gray-400'
                ]}>
                  {scholarship.icon === 'platinum' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                    </svg>
                  )}
                  {scholarship.icon === 'gold' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                  )}
                  {scholarship.icon === 'silver' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                  )}
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">{scholarship.name}</h3>
                <p class="text-sm text-gray-600">{scholarship.description}</p>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ -->
  <Section background="white">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            {translate('admissions.faq_title')}
          </h2>
          <p class="text-lg text-gray-600">
            {translate('admissions.faq_subtitle')}
          </p>
        </div>

        <div class="space-y-4">
          {faqs.map((faq, index) => (
            <Card>
              <details class="group">
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                  <h3 class="font-semibold text-gray-900 pr-4">{faq.question}</h3>
                  <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </summary>
                <div class="px-6 pb-6 text-gray-600">
                  {faq.answer}
                </div>
              </details>
            </Card>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="gray">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          {translate('admissions.cta_title')}
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          {translate('admissions.cta_subtitle')}
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="#registration"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            {translate('admissions.cta_button')}
          </a>
          <a
            href={localPath('/contact')}
            class="inline-flex items-center px-6 py-3 border-2 border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors"
          >
            {translate('admissions.cta_contact')}
          </a>
        </div>
      </div>
    </Container>
  </Section>
</MarketingLayout>
