---
import MarketingLayout from '../../layouts/MarketingLayout.astro';
import Container from '../../components/Container.astro';
import Section from '../../components/Section.astro';
import Card from '../../components/Card.astro';
import { getLocaleFromUrl, t } from '../../utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const translate = (key: string) => t(locale, key);
---

<MarketingLayout
  title={translate('about.title')}
  description={translate('about.description')}
>
  <!-- Hero Section -->
  <Section background="gradient" class="pt-32 pb-20">
    <Container>
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {translate('about.title')}
        </h1>
        <p class="text-xl text-gray-700 mb-4">
          {translate('about.subtitle')}
        </p>
        <p class="text-lg text-gray-600">
          {translate('about.description')}
        </p>
        <p class="text-md text-gray-600 mt-4">
          {translate('about.founder')}
        </p>
      </div>
    </Container>
  </Section>

  <!-- Name Meaning Section -->
  <Section background="white">
    <Container>
      <div class="max-w-3xl mx-auto">
        <Card>
          <div class="p-8">
            <h2 class="text-3xl font-bold text-primary-600 mb-6 text-center">
              {translate('about.name_meaning_title')}
            </h2>
            <p class="text-lg text-gray-700 text-center">
              {translate('about.name_meaning')}
            </p>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Vision Section -->
  <Section background="gray">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            {translate('about.vision_title')}
          </h2>
          <Card>
            <div class="p-8">
              <p class="text-xl text-gray-700">
                {translate('about.vision')}
              </p>
            </div>
          </Card>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Mission Section -->
  <Section background="white">
    <Container>
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">
          {translate('about.mission_title')}
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          {[1, 2, 3, 4, 5, 6].map((num) => (
            <Card hover={true}>
              <div class="p-6">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-primary-500 text-white flex items-center justify-center font-bold text-lg">
                      {num}
                    </div>
                  </div>
                  <div class="flex-1">
                    <p class="text-gray-700">
                      {translate(`about.mission_${num}`)}
                    </p>
                  </div>
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Programs Overview Section -->
  <Section background="gradient">
    <Container>
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-12">
          {translate('nav.programs')}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Sistem Informasi -->
          <Card hover={true}>
            <div class="p-8">
              <h3 class="text-2xl font-bold text-primary-600 mb-4">
                {translate('programs.information_systems')}
              </h3>
              <ul class="text-left space-y-2 text-gray-700">
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Project Management</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Machine Learning</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Data Analytics</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Business Information Systems</span>
                </li>
              </ul>
            </div>
          </Card>

          <!-- Teknik Informatika -->
          <Card hover={true}>
            <div class="p-8">
              <h3 class="text-2xl font-bold text-primary-600 mb-4">
                {translate('programs.computer_engineering')}
              </h3>
              <ul class="text-left space-y-2 text-gray-700">
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Cybersecurity</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Artificial Intelligence</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Web Development</span>
                </li>
                <li class="flex items-start">
                  <span class="text-primary-500 mr-2">•</span>
                  <span>Software Engineering</span>
                </li>
              </ul>
            </div>
          </Card>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Unique Approach Section -->
  <Section background="white">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            {translate('about.unique_approach_title')}
          </h2>
          <p class="text-xl text-primary-600 font-semibold mb-6">
            {translate('about.unique_approach_subtitle')}
          </p>
          <p class="text-lg text-gray-700">
            {translate('about.unique_approach_intro')}
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <Card hover={true}>
            <div class="p-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {translate('about.unique_approach_integration_title')}
                  </h3>
                  <p class="text-gray-700">
                    {translate('about.unique_approach_integration_desc')}
                  </p>
                </div>
              </div>
            </div>
          </Card>

          <Card hover={true}>
            <div class="p-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-secondary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {translate('about.unique_approach_industry_title')}
                  </h3>
                  <p class="text-gray-700">
                    {translate('about.unique_approach_industry_desc')}
                  </p>
                </div>
              </div>
            </div>
          </Card>

          <Card hover={true}>
            <div class="p-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {translate('about.unique_approach_quality_title')}
                  </h3>
                  <p class="text-gray-700">
                    {translate('about.unique_approach_quality_desc')}
                  </p>
                </div>
              </div>
            </div>
          </Card>

          <Card hover={true}>
            <div class="p-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-secondary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {translate('about.unique_approach_outcomes_title')}
                  </h3>
                  <p class="text-gray-700">
                    {translate('about.unique_approach_outcomes_desc')}
                  </p>
                </div>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </Container>
  </Section>
</MarketingLayout>
