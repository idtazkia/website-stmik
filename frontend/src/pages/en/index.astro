---
import MarketingLayout from '../../layouts/MarketingLayout.astro';
import Container from '../../components/Container.astro';
import Section from '../../components/Section.astro';
import Button from '../../components/Button.astro';
import { getLocaleFromUrl, t, localizePath } from '../../utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const translate = (key: string) => t(locale, key);
const localPath = (path: string) => localizePath(locale, path);
---

<MarketingLayout>
  <!-- Hero Section -->
  <Section background="gradient" spacing="xl">
    <Container>
      <div class="text-center space-y-8">
        <div class="flex justify-center">
          <img
            src="/images/logo-stmik-tazkia.svg"
            alt={translate('site.name')}
            class="h-32 w-auto"
          />
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary-500">
          {translate('site.name')}
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 max-w-3xl mx-auto">
          {translate('site.tagline')}
        </p>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {translate('site.mission')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button href={localPath('/register')} variant="primary" size="lg">
            {translate('button.apply_now')}
          </Button>
          <Button href={localPath('/programs')} variant="outline" size="lg">
            {translate('button.learn_more')}
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Features Section -->
  <Section background="white" spacing="xl">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-500 mb-4">
          Keunggulan Kami
        </h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">{translate('features.job_guarantee')}</h3>
          <p class="text-gray-600">Job placement program for top graduates</p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">{translate('features.flexible_schedule')}</h3>
          <p class="text-gray-600">Flexible class schedule for working professionals</p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">{translate('features.hybrid_learning')}</h3>
          <p class="text-gray-600">Effective online and offline learning</p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">{translate('features.expert_faculty')}</h3>
          <p class="text-gray-600">Practitioner lecturers with 10+ years of experience</p>
        </div>

        <div class="text-center space-y-4 md:col-span-2 lg:col-span-1">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 008 10.172V5L7 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">{translate('features.project_based_learning')}</h3>
          <p class="text-gray-600">{translate('features.project_based_desc')}</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Statistics Section -->
  <Section background="gradient" spacing="lg">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-500 mb-4">
          {translate('stats.title')}
        </h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          {translate('stats.subtitle')}
        </p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center space-y-2">
          <div class="text-5xl font-bold text-secondary-500">16</div>
          <div class="text-xl font-semibold text-gray-900">{translate('stats.weeks')}</div>
          <p class="text-sm text-gray-600">{translate('stats.weeks_label')}</p>
        </div>
        <div class="text-center space-y-2">
          <div class="text-5xl font-bold text-primary-500">4</div>
          <div class="text-xl font-semibold text-gray-900">{translate('stats.courses')}</div>
          <p class="text-sm text-gray-600">{translate('stats.courses_label')}</p>
        </div>
        <div class="text-center space-y-2">
          <div class="text-5xl font-bold text-secondary-500">1</div>
          <div class="text-xl font-semibold text-gray-900">{translate('stats.products')}</div>
          <p class="text-sm text-gray-600">{translate('stats.products_label')}</p>
        </div>
        <div class="text-center space-y-2">
          <div class="text-5xl font-bold text-primary-500">100%</div>
          <div class="text-xl font-semibold text-gray-900">{translate('stats.practical')}</div>
          <p class="text-sm text-gray-600">{translate('stats.practical_label')}</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Programs Section -->
  <Section background="gray" spacing="xl">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-500 mb-4">
          Program Studi
        </h2>
        <p class="text-xl text-gray-600">
          Pilih program studi sesuai minat dan tujuan karir Anda
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
          <h3 class="text-2xl font-bold text-primary-500 mb-4">
            {translate('programs.information_systems')}
          </h3>
          <p class="text-gray-600 mb-6">
            Konsentrasi: Project Management, Machine Learning, Data Analytics, Business Information Systems
          </p>
          <Button href={localPath('/programs/information-systems')} variant="outline">
            {translate('button.learn_more')}
          </Button>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
          <h3 class="text-2xl font-bold text-primary-500 mb-4">
            {translate('programs.computer_engineering')}
          </h3>
          <p class="text-gray-600 mb-6">
            Konsentrasi: Cybersecurity, Artificial Intelligence, Web Development, Software Engineering
          </p>
          <Button href={localPath('/programs/computer-engineering')} variant="outline">
            {translate('button.learn_more')}
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="gradient" spacing="lg">
    <Container>
      <div class="text-center space-y-6">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-500">
          Siap Bergabung?
        </h2>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Mulai perjalanan pendidikan Anda di STMIK Tazkia. Daftar sekarang dan raih masa depan cemerlang!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button href={localPath('/register')} variant="primary" size="lg">
            {translate('button.apply_now')}
          </Button>
          <Button href={`https://wa.me/${translate('footer.phone').replace(/\D/g, '')}`} variant="secondary" size="lg">
            {translate('button.free_consultation')}
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</MarketingLayout>
